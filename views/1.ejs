<html>
<head>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.0/socket.io.js"></script>
<script>
var socket = io.connect('http://localhost:3000');
function sendText(id) {
  var text = document.getElementById(id).value;
  var checked = document.getElementById(id + "-check").checked;
  socket.emit('text', {id: id, text: text, checked: checked});
}
</script>
</head>
<body>
<h1>Input Text Fields</h1>
<div id="textboxes">
  <div>
    <input type="text" id="text1" oninput="sendText('text1')" />
    <input type="checkbox" id="text1-check" onchange="sendText('text1')" />
  </div>
