<html>
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.0/socket.io.js"></script>
<script>
var socket = io.connect('http://localhost:3000');
function sendText(id) {
  var text = document.getElementById(id).value;
  var checked = document.getElementById(id + "-check").checked;
  socket.emit('text', {id: id, text: text, checked: checked});
}
</script>
<style>
#text1 ,#text2 ,#text3, #text4, #text5, #text6, #text7{
  margin :10px;
}

</style>
</head>
<body>
<h1>Input Text Fields</h1>
<div id="textboxes">
  <div>
    <input type="text" id="text1" oninput="sendText('text1')" />
    <input type="checkbox" class="form-check-input" id="text1-check" onchange="sendText('text1')" />
  </div>
  <div>
    <input type="text" id="text2" oninput="sendText('text2')" />
    <input type="checkbox" class="form-check-input" id="text2-check" onchange="sendText('text2')" />
  </div>
  <div>
