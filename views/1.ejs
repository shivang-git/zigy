  </div>
  <div>
    <input type="text" id="text4" oninput="sendText('text4')" />
    <input type="checkbox" class="form-check-input" id="text4-check" onchange="sendText('text4')" />
  </div>
  <div>
    <input type="text" id="text5" oninput="sendText('text5')" />
    <input type="checkbox" class="form-check-input" id="text5-check" onchange="sendText('text5')" />
  </div>
  <div>
    <input type="text" id="text6" oninput="sendText('text6')" />
